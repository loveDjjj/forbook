page {
    background: #ffffff;
}

scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 顶部搜索区域 */
.top-container {
    display: flex;
    align-items: center;
    padding: 24rpx;
    background: #fff;
    gap: 24rpx;
}

.category-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
    color: #333;
}

.category-icon {
    width: 32rpx;
    height: 32rpx;
    margin-bottom: 4rpx;
}

.cate-text {
    font-size: 20rpx;
}

.search-wrapper {
    flex: 1;
    height: 72rpx;
    background: #f7f7f9;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    position: relative;
}

.scan-icon {
    width: 36rpx;
    height: 36rpx;
}

.search-button {
    color: #43a756;
    text-align: center;
    align-items: center;
    padding: 0 6rpx;
    font-size: 29rpx;
    font-weight: bold;
    background-color: transparent;
    border: none;
    outline: none;
}

.search-input {
    flex: 1;
    margin: 0 20rpx;
    font-size: 28rpx;
    padding-right: 120rpx;
}

.placeholder-style {
    color: #999;
}

.search-hot {
    padding: 24rpx;
}

.hot-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 16rpx;
}

.hot-item {
    width: calc(25% - 16rpx);
    display: inline-block;
    padding: 12rpx 24rpx;
    background: #f7f7f7;
    color: #666;
    border-radius: 12rpx;
    box-sizing: border-box;
    margin: 8rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}