/* 整体容器样式 */
.seller-container {
  padding: 30rpx;
  background: #ffffff;
  min-height: 100vh;
}

/* 书籍信息区域样式 */
.book-info {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222222;
  margin-bottom: 30rpx;
  padding-left: 24rpx;
  border-left: 10rpx solid #4a90e2;
  letter-spacing: 2rpx;
}

/* 书籍图片样式 */
.book-image {
  width: 640rpx;
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.book-image image {
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 书籍详情样式 */
.book-details {
  padding: 20rpx 10rpx;
  background: #ffffff;
  border-radius: 16rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 24rpx;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #ffffff;
  border-radius: 12rpx;
}

.label {
  color: #666666;
  min-width: 180rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.value {
  color: #333333;
  flex: 1;
  font-size: 30rpx;
  padding-left: 20rpx;
}

.price {
  color: #ff6b6b;
  font-weight: 600;
  font-size: 34rpx;
}

.description {
  align-items: flex-start;
}

.description .value {
  line-height: 1.6;
}

.help-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 0;
}

/* 底部按钮样式 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx 30rpx;
  background: rgba(255,255,255,0.98);
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.08);
  backdrop-filter: blur(10px);
}

.btn {
  flex: 1;
  margin: 0 15rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.contact {
  background: #ffffff;
  color: #4a90e2;
  border: 2rpx solid #4a90e2;
}

.contact:active {
  background: #f0f7ff;
  transform: scale(0.98);
}

.buy {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(74,144,226,0.3);
}

.buy:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(74,144,226,0.2);
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.image-swiper image {
  width: 100%;
  height: 100%;
}