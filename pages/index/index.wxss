page {
  background: #f5f5f5;
}

.top-container {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  gap: 24rpx;
}

.category-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #333;
}

.category-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 4rpx;
}
.cate-text{
  font-size: 20rpx;
}

.search-wrapper {
  flex: 1;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  position: relative;
}


.scan-icon {
  width: 36rpx;
  height: 36rpx;
}

.search-view {
  color: #999;
  font-size: 28rpx;
  flex: 1;
  padding: 0 20rpx;
}

.placeholder-style {
  color: #999;
}

/* 轮播图样式 */
.banner-swiper {
  height: 40vw;
  margin: 24rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 30px;
}

/* 通用区块样式 */
.section {
  background: #fff;
  padding: 24rpx;
  margin: 24rpx;
  margin-top: 0;
  border-radius: 24rpx;
  padding-top: 0;
}

.section-header {
  font-size: 32rpx;
  font-weight: bold;
  margin: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #07c160;
}

/* 畅销书籍滚动区域 */
scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.book-scroll {
  white-space: nowrap;
  width: 100%;
  padding: 24rpx 0;
}

.book-item {  
  display: inline-block;
  width: 240rpx;
  margin-right: 24rpx;
  vertical-align: top;
}

.book-image {
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
  background: #ffffff;
}

.book-info {
  padding: 12rpx 0;
  text-align: center;
}

.book-title {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space: normal;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.book-author {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space: normal;
  margin-bottom: 12rpx;
  line-height: 1.4;
  color: #999;
}

/* 价格相关样式 */
.price-info {
  display: flex;
  align-items: center;
  justify-content: center;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff4d4f;
}

.price-value {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin: 0 4rpx;
}

.price-no {
  font-size: 30rpx;
  color: #ff4d4f;
}