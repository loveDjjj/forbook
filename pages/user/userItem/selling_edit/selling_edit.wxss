.sell-container {
  padding: 24rpx;
  background-color: #f8f8f8;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.select-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  margin: 12rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #07c160;
}

.picker-content {
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #666;
}

.book-input {
  margin: 22rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 2rpx solid #eee;
}

.book-input::placeholder {
  color: #999;
}

.image-container {
  border: 2rpx solid #eee;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin: 40rpx 0;
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background: #fff;
}

.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.empty-image {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 28rpx;
}

.empty-image::before {
  content: 'üì∏';
  font-size: 48rpx;
  margin-bottom: 30rpx;
  color: #fbbd08;
}

.description-section,
.price-section,
.contact-section {
  margin-top: 20rpx;
}

.notes-checkbox {
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.notes-checkbox-item {
  font-size: 28rpx;
  color: #666;
}

/* Ëá™ÂÆö‰πâcheckboxÊ†∑Âºè */
.notes-checkbox checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 2rpx solid #666;
}

.notes-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #07c160;
  border-color: #07c160;
}

.notes-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.price-section {
  display: flex;
  align-items: center;
}

.currency {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
}

.price-input {
  flex: 1;
}

.submit-btn {
  margin-top: 50rpx;
  background: #fbbd08;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10px;
}

.submit-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.isbn-input-container {
  display: flex;
  align-items: center;
  flex: 1;
}

.scan-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  flex-shrink: 0;
}

.book-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 10rpx;
}

.book-info-container {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.book-info-image {
  width: 180rpx;
  height: 180rpx;
  object-fit: cover;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.book-info-content {
  flex: 1;
}

.book-info-item {
  display: flex;
  margin: 10rpx 0;
  font-size: 28rpx;
  line-height: 1.5;
}

.book-info-label {
  color: #666;
  min-width: 120rpx;
}

.book-info-value {
  color: #333;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: -webkit-box;
}