page {
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.user-container {
  display: block;
  background: #ffffff;
}

/* 用户信息区域 */
.user-info {
  padding: 24rpx;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  margin: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  margin: 0;
  background: none;
  border-radius: 50%;
}

.refreshIcon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.username {
  margin-left: 36rpx;
  font-size: 48rpx;
  color: #333;
  line-height: 1; 
  flex: 1;
}


/* 订单区域 */
.section-title {
  padding: 40rpx 40rpx 0rpx 40rpx;
  font-weight: bold;
  font-size: 36rpx;
  background: #fff;
  border-radius: 12rpx 12rpx 0 0;
  overflow: hidden;
}

.order-grid {
  background: #fff;
  padding: 24rpx;
  margin: 0rpx 10rpx;
  border-radius: 0 0 12rpx 12rpx;
}


.order-items {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  box-sizing: border-box;
}

.order-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 4rpx;
  transition: all 0.3s ease;
}

.order-item text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  font-weight: bold;
  width: 100%;
}

/* 购物车图标 */
.cart-icon {
  width: 56rpx;
  height: 56rpx;
  opacity: 0.7;
}

/* 菜单区域 */
.menu {
  margin: 24rpx 24rpx 0 24rpx;
  background: #fff;
  font-size: 28rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.menu-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.menu-item::after {
  content: '';
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 0;
  height: 1rpx;
  background: #f5f5f5;
  transform: scaleY(0.5);
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  width: 28rpx;
  height: 28rpx;
}

/* 重置按钮样式 */
button {
  margin: 0;
  padding: 0;
  line-height: 1;
}

button::after {
  border: none;
}

/* 悬浮客服按钮 */
.float-service {
  position: fixed;
  right: 32rpx;
  bottom: 140rpx;
  z-index: 999;
}

.service-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  margin: 0;
  border-radius: 50%;
  background: #07c160;
  box-shadow: 0 4rpx 12rpx rgba(7,193,96,0.3);
}

.service-btn::after {
  border: none;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 4rpx;
}

.service-btn text {
  font-size: 20rpx;
  color: #fff;
  line-height: 1;
}

.service-btn-hover {
  transform: scale(0.95);
  opacity: 0.9;
}

.wallet-card {
  background: linear-gradient(to right, #07c160, #2edc85);
  margin: 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}

.wallet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.balance-title {
  font-size: 28rpx;
  opacity: 0.9;
}

.withdraw-btn {
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
}

.balance-amount {
  font-size: 48rpx;
  font-weight: 600;
}

.balance-symbol {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 提现弹窗样式 */
.withdraw-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.withdraw-dialog-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.withdraw-dialog-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.withdraw-qr {
  width: 400rpx;
  height: auto;
  margin: 20rpx 0;
}

.withdraw-dialog-close {
  margin-top: 30rpx;
  padding: 20rpx 60rpx;
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.balance-refresh {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.refresh-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.8;
}

.refresh-icon:active {
  transform: rotate(180deg);
  transition: transform 0.3s ease;
}