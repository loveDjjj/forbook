page {
  background-color: #f7f7f9;
}

.result-header {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  border-left: 10rpx solid #07c160;
}

.header-text {
  font-size: 36rpx;
  font-weight: bold;
}

.book-list {
    padding: 24rpx 0;
    background-color: #ffffff;
}

.book-item {
    display: flex;
    background: #fff;
    padding: 24rpx;
    border-bottom: 1rpx solid #eee;
    align-items: center;
}

.book-image-wrapper {
    width: 160rpx;
    height: 160rpx;
    margin-right: 24rpx;
}

.book-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
}

.stock-tag {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-size: 20rpx;
    padding: 4rpx 8rpx;
    border-radius: 8rpx 0 8rpx 0;
}

.book-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.book-title {
    font-size: 28rpx;
    width: calc(100% - 100rpx);
    margin-bottom: 8rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.book-course {
    font-size: 24rpx;
    width: calc(100% - 100rpx);
    color: #999;
}

.book-author {
    width: calc(100% - 100rpx);
    font-size: 20rpx;
    color: #999;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    margin: 8rpx 0;
}

.book-isbn {
    font-size: 20rpx;
    color: #999;
}

.original-price {
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
}

.no-result {
    text-align: center;
    padding: 48rpx;
    color: #999;
    font-size: 28rpx;
}

.no-result {
  text-align: center;
  padding: 40rpx;
  color: #999;
}