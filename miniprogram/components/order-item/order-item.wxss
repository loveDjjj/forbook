.address-item {
  border-radius: 12rpx;
  background: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  overflow: hidden;
  padding: 20rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  position: relative;
}

.status-tag-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 50rpx;
}

.status-tag-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.status-tag {
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #e7891e;
}

.book-image-container {
  width: 180rpx;
  height: 180rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.book-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.right-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title-price-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.book-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.book-price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.book-info-left {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 6rpx;
}

.book-condition {
  font-size: 22rpx;
  color: #888;
}

.item-bottom-container{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-left: auto;
}

.item-bottom{
  display: flex;
  justify-content: center;
  align-items: center; 
  width: 170rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50px;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 15rpx;
}

.botton1{
  background: #fafafa;
  color: black;
} 

.botton2{
  background: #f5de16;
  color: black;
} 

.botton3{
  background: #f74809;
  color: white;
} 

